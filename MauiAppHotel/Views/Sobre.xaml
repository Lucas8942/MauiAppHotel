<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="20"
                             BackgroundColor="Black">
            <Frame BackgroundColor="{StaticResource Primary}"
       CornerRadius="10"
       Padding="10"
       HasShadow="True">
                <Label Text="Sobre o Aplicativo"
           FontSize="24"
           FontFamily="PlaypenSansDeva"
           HorizontalOptions="Center"
           HorizontalTextAlignment="Center"
           TextColor="White" />
            </Frame>

            <Label Text="Este aplicativo foi desenvolvido para a atividade da agenda 13 do curso desenvolvimento de sistemas. Aqui você pode simular reservas, escolher acomodações e verificar disponibilidade de datas."
                   FontSize="16"
                   TextColor="White"/>

            <Label Text="Versão: 1.0.0"
                   FontAttributes="Italic"
                   TextColor="White"/>

            <Label Text="Desenvolvido por:
                   Lucas Monteiro de Jesus"
                   FontSize="14"
                   TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
